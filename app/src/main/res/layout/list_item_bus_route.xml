<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="First"
        android:id="@+id/textOperator"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorVeryDarkGrey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="6"
        android:id="@+id/textLine"
        android:layout_toRightOf="@id/textOperator"
        android:layout_toEndOf="@id/textOperator"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorVeryDarkGrey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Calderwood"
        android:id="@+id/textOrigin"
        android:layout_toRightOf="@id/textLine"
        android:layout_toEndOf="@id/textLine"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorVeryDarkGrey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="13:54"
        android:id="@+id/textTime"
        android:layout_toRightOf="@id/textOrigin"
        android:layout_toEndOf="@id/textOrigin"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorVeryDarkGrey"/>
</RelativeLayout>